<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.athlete.AthleteOverviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/athleteImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="365dp"
                    android:layout_height="233dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teamNameField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/athLastNameField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/athCityOfOriginField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/athCountryField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/athDateOfBirthField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/athSportNameField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TextView" />
                </LinearLayout>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/athMapView"
                    android:layout_width="wrap_content"
                    android:layout_height="159dp"
                    android:layout_margin="30dp" />

                <Button
                    android:id="@+id/athEditButton"
                    android:layout_width="283dp"
                    android:layout_height="42dp"
                    android:text="Edit" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>